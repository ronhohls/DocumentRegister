<EditForm Model="@StatusModel" OnValidSubmit="@OnValidSubmit">
	<DataAnnotationsValidator />
	<ValidationSummary />
	<fieldset disabled="@Disabled">
		<div class="form-group">
			<label>Description:</label>
			<div>
				<InputText @bind-Value="StatusModel.Description" class="form-control" />
				<ValidationMessage For="@(() => StatusModel.Description)" />
			</div>
		</div>
	</fieldset>
	@if (!Disabled)
	{
		<button type="submit" class="btn btn-success btn-block">@ButtonText</button>
	}
	<BackToList Target="statuses"/>
</EditForm>
