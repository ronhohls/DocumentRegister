@page "/segmentcategories/details/{id:int}/"
@attribute [Authorize(Roles = "Administrator")]

<h3>Segment Category Details</h3>

<EditForm Model="@segmentCategory">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled>
        @*Name field*@
        <div class="form-group">
            <label for="name">Category Name</label>
            <InputText class="form-control" id="name" @bind-Value="segmentCategory.Name" />
            <ValidationMessage For="@(() => segmentCategory.Name)" />
        </div>
        @*Description field*@
        <div class="form-group">
            <label for="description">Description</label>
            <InputText class="form-control" id="description" @bind-Value="segmentCategory.Description" />
            <ValidationMessage For="@(() => segmentCategory.Description)" />
        </div>
        @*DataType field*@
        <div class="form-group">
            <label for="dataType">Data Type</label>
            <InputText class="form-control" id="dataType" @bind-Value="dataType.Name" />
        </div>
        @*IsPredefined field*@
        <div class="form-group">
            <label for="isPredefined">Is predefined?</label>
            <InputSelect class="form-control" id="isPredefined" @bind-Value="segmentCategory.IsPredefined">
                <option value="true">True</option>
                <option value="false">False</option>
            </InputSelect>
        </div>
    </fieldset>
    <BackToList Target="segmentcategories" />
</EditForm>