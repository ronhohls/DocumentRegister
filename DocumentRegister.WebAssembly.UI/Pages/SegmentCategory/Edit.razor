@page "/segmentcategories/edit/{id:int}/"
@attribute [Authorize(Roles = "Administrator")]

<h3>Edit Segment Category</h3>

<EditForm Model="@segmentCategory" OnValidSubmit="EditSegmentCategory">
    <DataAnnotationsValidator />
    <ValidationSummary />
     @*Name field*@
    <div class="form-group md-6">
        <label for="name" class="control-label">Category Name</label>
        <InputText class="form-control" id="name" @bind-Value="segmentCategory.Name" />
        <ValidationMessage For="@(() => segmentCategory.Name)" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <InputText class="form-control" id="description" @bind-Value="segmentCategory.Description" />
        <ValidationMessage For="@(() => segmentCategory.Description)" />
    </div>
    @*DataType field*@
    <div class="form-group">
        <label for="dataType">Data Type</label>
        <InputSelect class="form-control" id="dataType" @bind-Value="segmentCategory.DataTypeId">
            <option>Select Data Type</option>
            @foreach (var dataType in dataTypes)
            {
                <option value="@dataType.DataTypeId">@dataType.Name</option>
            }
        </InputSelect>
        <ValidationMessage For="@(() => segmentCategory.DataTypeId)" />
    </div>
    @*IsPredefined field*@
    <div class="form-group">
        <label for="isPredefined">Is predefined?</label>
        <InputSelect class="form-control" id="isPredefined" @bind-Value="segmentCategory.IsPredefined">
            <option value="true">True</option>
            <option value="false">False</option>
        </InputSelect>
        <ValidationMessage For="@(() => segmentCategory.IsPredefined)" />
    </div>
    <hr/>
    <div class="d-flex">
        <button class="btn btn-success me-2" type="submit">Update</button>
    <BackToList Target="segmentcategories" />
    </div>
</EditForm>