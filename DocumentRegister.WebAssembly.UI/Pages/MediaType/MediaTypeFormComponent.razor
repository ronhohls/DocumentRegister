<EditForm Model="@MediaTypeModel" OnValidSubmit="@OnValidSubmit">
	<DataAnnotationsValidator />
	<ValidationSummary />
	<fieldset disabled="@Disabled">
		@*Description field*@
		<div class="form-group">
			<label>Description:</label>
			<div>
				<InputText @bind-Value="MediaTypeModel.Description" class="form-control" />
				<ValidationMessage For="@(() => MediaTypeModel.Description)" />
			</div>
		</div>
	</fieldset>
	<hr/>
	<div class="d-flex">
		@if (!Disabled)
		{
			<button type="submit" class="btn btn-success btn-block me-2">@ButtonText</button>
		}
		<BackToList Target="mediatypes"/>
	</div>
</EditForm>